<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.myclass.mapper.CommentsMapper">
    <!-- 글쓰기(insert) -->
     <select id="cmtInsert" parameterType="CommentsDto">
        insert into comunitycomments(idx, mref, writer, content, createDate, ip, heart)
        values(#{idx}, #{mref}, #{writer}, #{content}, #{createDate}, #{ip}, #{heart})
     </select>
    <!-- 글삭제(delete) -->
     <select id="cmtDelete" parameterType="CommentsDto">
        delete from comunitycomments where idx=#{idx}
     </select>
    </mapper>